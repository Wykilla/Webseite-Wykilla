# WYKILLA Website - Environment Variables
# Copy this to .env.local and fill in your actual values

# ===========================================
# Database (Supabase)
# ===========================================
# Get from: https://app.supabase.com/project/_/settings/database
DATABASE_URL="postgresql://..."

# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://xxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJxxx..."
SUPABASE_SERVICE_ROLE_KEY="eyJxxx..."

# ===========================================
# NextAuth Authentication
# ===========================================
# Production: https://wykilla.com or https://your-app.vercel.app
NEXTAUTH_URL="http://localhost:3000"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# ===========================================
# OAuth Providers (Optional)
# ===========================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="xxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="xxx"

# ===========================================
# Stripe Payments
# ===========================================
# Get from: https://dashboard.stripe.com/apikeys
# IMPORTANT: Use test keys for development, live keys for production!
STRIPE_SECRET_KEY="sk_test_xxx"  # sk_live_xxx for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxx"  # pk_live_xxx for production

# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# ===========================================
# Stripe Product Price IDs
# ===========================================
# Get from: https://dashboard.stripe.com/products
# Create 3 subscription products:
# 1. Free (€0/mo) - 10 lyric generations/month
# 2. Pro (€9.99/mo) - 100 generations/month
# 3. Premium (€19.99/mo) - Unlimited
STRIPE_PRICE_ID_FREE="price_xxx"
STRIPE_PRICE_ID_PRO="price_xxx"
STRIPE_PRICE_ID_PREMIUM="price_xxx"

# ===========================================
# Email Service (Optional - Resend)
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_xxx"
RESEND_FROM_EMAIL="noreply@wykilla.com"

# ===========================================
# OpenAI (for Tools - Lyric Generator, Audio FX)
# ===========================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-xxx"

# ===========================================
# Feature Flags (Optional)
# ===========================================
# Enable/disable features during development
NEXT_PUBLIC_TOOLS_ENABLED="true"
NEXT_PUBLIC_ENABLE_3D_PLACEHOLDERS="true"
